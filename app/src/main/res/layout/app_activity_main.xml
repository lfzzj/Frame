        <FrameLayout
            android:id="@+id/fl_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <include layout="@layout/app_bottom" />
    </LinearLayout>



</android.support.v4.widget.DrawerLayout>
